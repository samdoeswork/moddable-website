---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingCard from "@components/pricing.astro";

const pricing = [
  {
    name: "Free Pilot",
    price: "Free",
    popular: false,
    features: [
      "Lifetime free",
      "Up to 100 Mods",
      "Up to 100 End-Users",
      "Community Support",
    ],
    button: {
      text: "Talk to Us",
      link: "https://meetings-eu1.hubspot.com/sam14/moddable",
    },
  },
  {
    name: "Startup",
    price: {
      monthly: "$2,000",
      annual: "$16",
      discount: "10%",
      original: "$24",
    },
    popular: true,
    features: [
      "All Free Features",
      "Unlimited Mods",
      "Up to 10,000 Active End-Users",
      "Up to 1 million Views/Month",
      "Priority Support",
      "99.99% Uptime SLA",

    ],
    button: {
      text: "Get Started",
      link: "https://meetings-eu1.hubspot.com/sam14/moddable",
    },
  },
  {
    name: "Enterprise",
    price: "Custom",
    popular: false,
    features: [
      "All Startup Features",
      "Unlimited Users",
      "Ulimited Mods",
      "Ulimited Usage",
      "Enterprise Grade Support",
      "Access to our Engineers",
      "Option to Self Host",
      "Dedicated Account Manager",
    ],
    button: {
      text: "Contact us",
      link: "Get Started",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc">
        Simple & Predictable pricing. No Surprises.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
